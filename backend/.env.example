DATABASE_URL="postgresql://user:password@localhost:5432/neuronode?schema=public"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
NODE_ENV="development"
PORT=3000
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"

# AI Processing Configuration
# Maximum PDF file size in megabytes (default: 50)
MAX_PDF_SIZE_MB=50

# Characters per chunk for AI processing (default: 30000)
# Larger chunks = fewer API calls but longer processing time
# ~30000 chars = approximately 15-20 pages of text
AI_CHUNK_SIZE=30000

# Delay between chunk processing in milliseconds (default: 1000)
# Helps avoid API rate limits. Set to 0 to disable.
AI_RATE_LIMIT_DELAY_MS=1000
